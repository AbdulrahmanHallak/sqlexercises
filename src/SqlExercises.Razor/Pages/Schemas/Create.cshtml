@page
@model CreateModel
@{
    ViewData["Title"] = "Create Schema";
}
<h2>Create Schema</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="Schema.Name" class="form-label">Name</label>
        <input asp-for="Schema.Name" class="form-control" maxlength="10" />
        <span asp-validation-for="Schema.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 