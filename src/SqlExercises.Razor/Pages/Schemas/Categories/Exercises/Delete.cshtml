@page "/Schemas/{schema:alpha}/Categories/{category:alpha}/Exercises/{id:int}/Delete"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Exercise";
}
<h2>Delete Exercise</h2>
<div class="alert alert-danger">
    <p>Are you sure you want to delete this exercise?</p>
    <dl class="row">
        <dt class="col-sm-2">Question</dt>
        <dd class="col-sm-10">@Model.Exercise.Question</dd>
        <dt class="col-sm-2">Schema</dt>
        <dd class="col-sm-10">@Model.Exercise.SchemaName</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Exercise.CategoryName</dd>
    </dl>
    <form method="post" asp-route-category="@Model.Category" asp-route-schema="@Model.Schema">
        <input asp-for="Exercise.Id" type="hidden">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-page="./Index" asp-route-category="@Model.Category" asp-route-schema="@Model.Schema"
        class="btn btn-secondary">Cancel</a>
</div>