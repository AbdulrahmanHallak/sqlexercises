@page
@model IndexModel
@{
    ViewData["Title"] = "Schemas";
}
<h2>Schemas</h2>
@* TODO: the create should be only logged-in users *@
@* <a asp-page="Create" class="btn btn-success mb-3">Create New Schema</a> *@
<ul class="list-group">
    @foreach (var schema in Model.Schemas)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>@schema.SchemaName</span>
            <span>
                <a asp-page="./Categories/Index" asp-route-schema="@schema.SchemaName" class="btn btn-sm btn-danger"></a>
            </span>
        </li>
    }
</ul>