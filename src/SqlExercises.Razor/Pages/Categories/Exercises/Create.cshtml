@page
@model SqlExercises.Razor.Pages.Categories.Exercises.CreateModel
@{
    ViewData["Title"] = "Create Exercise";
}
<h2>Create Exercise</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="Exercise.Question" class="form-label"></label>
        <textarea asp-for="Exercise.Question" class="form-control"></textarea>
        <span asp-validation-for="Exercise.Question" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Exercise.Solution" class="form-label"></label>
        <textarea asp-for="Exercise.Solution" class="form-control"></textarea>
        <span asp-validation-for="Exercise.Solution" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Exercise.Answer" class="form-label"></label>
        <input asp-for="Exercise.Answer" class="form-control" />
        <span asp-validation-for="Exercise.Answer" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Exercise.Hint" class="form-label"></label>
        <input asp-for="Exercise.Hint" class="form-control" />
        <span asp-validation-for="Exercise.Hint" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Exercise.CategoryId" class="form-label">Category</label>
        <select asp-for="Exercise.CategoryId" class="form-select" asp-items="Model.CategoryOptions"></select>
        <span asp-validation-for="Exercise.CategoryId" class="text-danger"></span>
        <div class="mt-2">
            <label for="newCategory" class="form-label">Or add new category:</label>
            <input type="text" id="newCategory" name="NewCategory" class="form-control" value="@Model.NewCategory" />
            <span asp-validation-for="NewCategory" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
