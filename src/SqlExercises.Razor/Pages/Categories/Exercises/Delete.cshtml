@page "/Categories/{category:alpha}/Exercises/{id:int}/Delete"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Exercise";
}
<h2>Delete Exercise</h2>
<div class="alert alert-danger">
    <p>Are you sure you want to delete this exercise?</p>
    <dl class="row">
        <dt class="col-sm-2">Question</dt>
        <dd class="col-sm-10">@Model.Exercise.Question</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Exercise.CategoryName</dd>
    </dl>
    <form method="post" asp-route-category="@RouteData.Values["category"]">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Categories/Exercises/Index" asp-route-category="@RouteData.Values["category"]"
            class="btn btn-secondary">Cancel</a>
    </form>
</div>